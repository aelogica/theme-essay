!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Blog'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Blog'}"}
    = stylesheet_link_tag 'express_blog/application', media: 'all'
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'express_blog/application'
    = csrf_meta_tags
  %body
    %header
      = render "theme_essay/layouts/blog_nav"
      = yield :page_title
    %main{:role => "main"}
      .row
        = yield
      = render "theme_essay/layouts/blog_footer"

